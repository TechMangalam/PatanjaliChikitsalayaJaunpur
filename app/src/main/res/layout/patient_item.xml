<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardElevation="20dp"
    android:layout_marginVertical="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:padding="20dp"
        android:background="@drawable/border_com_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pat_name_tv"
            android:textSize="16sp"
            android:text="Patient Name : Mangalam Pandey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/checkup_date_tv"
            android:textSize="16sp"
            android:layout_below="@id/pat_name_tv"
            android:layout_marginTop="10dp"
            android:text="Checkup Date : 20 Feb,2021 12:23:34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/disease_tv"
            android:textSize="16sp"
            android:layout_below="@id/checkup_date_tv"
            android:layout_marginTop="10dp"
            android:text="Disease : Headache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/hospital_tv"
            android:textSize="16sp"
            android:layout_below="@id/disease_tv"
            android:layout_marginTop="10dp"
            android:text="Hospital : Patanjali Chikitsalaya Jaunpur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>