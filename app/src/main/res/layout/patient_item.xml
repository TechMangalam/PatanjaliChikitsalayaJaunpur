<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardElevation="10dp"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:background="@drawable/custom_bordered_ripple"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pat_name_tv"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Patient Name : Mangalam Pandey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/checkup_date_tv"
            android:textSize="16sp"
            android:layout_below="@id/pat_name_tv"
            android:layout_marginTop="10dp"
            android:text="Checkup Date : 20 Feb,2021 12:23:34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/disease_tv"
            android:textSize="16sp"
            android:layout_below="@id/checkup_date_tv"
            android:layout_marginTop="10dp"
            android:text="Disease : Headache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/hospital_tv"
            android:textSize="16sp"
            android:layout_below="@id/disease_tv"
            android:layout_marginTop="10dp"
            android:text="Hospital : Patanjali Chikitsalaya Jaunpur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Click to open report"
            android:textColor="@color/teal_200"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/hospital_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>