<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginHorizontal="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="5dp"
        android:background="@drawable/custom_bordered_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:id="@+id/yogaSessionTitle"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:typeface="normal"
            android:drawableTint="@color/colorAccent"
            android:text="Yoga Session for sugar"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_yoga_24"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24" />

        <TextView
            android:id="@+id/yoga_session_duration"
            android:layout_below="@id/yogaSessionTitle"
            android:text="Duration : 30 minutes"
            android:textColor="@color/black"
            android:layout_marginStart="30dp"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>