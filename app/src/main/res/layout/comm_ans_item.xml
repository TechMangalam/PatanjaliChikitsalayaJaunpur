<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/black_05dp_square_border"
    android:elevation="20dp"
    android:layout_margin="5dp"
    android:minHeight="135dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/userInfoLayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="1dp"
            android:id="@+id/profile_image"
            android:src="@drawable/profile_icon"/>

        <TextView
            android:layout_toStartOf="@+id/like"
            android:id="@+id/profileName"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:text="Unknown"
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toStartOf="@+id/like"
            android:id="@+id/date"
            android:layout_below="@+id/profileName"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:text="24/07/2020"
            android:textSize="12sp"
            android:textStyle="italic"
            android:singleLine="true"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/like"
            android:src="@drawable/like_green"
            android:layout_alignParentEnd="true"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/likeCounter"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:text="0"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="2dp"
            android:background="#AB7B7B7B"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>

    <TextView
        android:autoLink="all"
        android:linksClickable="true"
        android:minHeight="50dp"
        android:id="@+id/question"
        android:layout_below="@id/userInfoLayout"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:typeface="normal"
        android:maxLines="10"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:padding="5dp"
        android:id="@+id/queImg"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/question"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        app:viewAspectRatio="1.33"
        android:layout_height="wrap_content" />



</RelativeLayout>